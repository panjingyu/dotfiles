[user]
	useConfigOnly = true

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[interactive]
	diffFilter = delta --color-only --features=interactive

[commit]
	gpgsign = true

[alias]
	st = status
	co = checkout
	lg = log --all --graph --pretty=format:'%Cblue%G? %Cred%h %Creset-%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --date=format:'%F %k:%M %z' --abbrev-commit

[core]
	editor = vim
	excludesFile = ~/.config/git/ignore
	quotepath = false # 不对0x80以上的字符进行quote，解决git status/commit时中文文件名乱码

[pull]
	ff = only

[init]
	defaultBranch = main

# Allow local customizations in the config.local file
[include]
	path = ~/.config/git/config.local
