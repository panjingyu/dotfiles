[user]
	useConfigOnly = true

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[interactive]
	diffFilter = delta --color-only --features=interactive

[delta]
	features = decorations
	line-numbers = true

[delta "interactive"]
	keep-plus-minus-markers = true

[delta "decorations"]
	commit-decoration-style = blue ol
	commit-style = raw
	zero-style  = 'syntax dim'
	minus-style = 'syntax bold auto'
	plus-style  = 'syntax bold auto'
	file-style = omit
	line-numbers-zero-style = "#888888"
	hunk-header-decoration-style = yellow box
	hunk-header-file-style = yellow
	hunk-header-style = file syntax

[commit]
	gpgsign = true
	verbose = true

[alias]
	st = status
	co = checkout
	cfg-global = !git config --file ~/.config/git/config.local  # without !git, file path are strictly handled as relative path
	lg = log --all --graph --format=log-line --date=format:'%F %k:%M %z' --abbrev-commit
	unstage = reset HEAD --

[core]
	editor = vim
	excludesFile = ~/.config/git/ignore
	quotepath = false # 不对0x80以上的字符进行quote，解决git status/commit时中文文件名乱码

[pull]
	ff = only

[merge]
	autostash = true

[pretty]
	log-line = %Cblue%G? %Cred%h %Creset-%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset

[init]
	defaultBranch = main

# Allow local customizations in the config.local file
[include]
	path = ~/.config/git/config.local
